{
  "name": "Good Times",
  "version": "1.3",
  "description": "Minimal, distract-free timepiece for the modern human",
  "manifest_version": 2,
  "icons": {
    "128": "docs/logo.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Good Times"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": ["*.woff2"],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  }
}
